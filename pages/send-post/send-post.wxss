page {
  background-color: #eee;
}
.user_info_row {
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
}
.user_info_row .user_info {
  display: flex;
  align-items: center;
}
.user_info_row .user_info image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}
.user_info_row .user_info .user_name {
  font-size: 40rpx;
  margin-left: 20rpx;
}
.post_main {
  position: relative;
  background-color: #fff;
}
.post_main .post_text .post_title_wrap textarea {
  width: 100%;
  height: 100rpx;
  font-size: 40rpx;
  padding: 20rpx;
}
.post_main .post_text .post_content_wrap textarea {
  width: 100%;
  height: 200rpx;
  font-size: 32rpx;
  padding: 20rpx;
}
.post_main .post_img_wrap {
  display: flex;
  flex-wrap: wrap;
  margin: 10rpx;
  padding-bottom: 20rpx;
}
.post_main .post_img_wrap button {
  margin: 0;
  width: 220rpx;
  height: 220rpx;
  font-size: 60rpx;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  margin-top: 20rpx;
  border: 1rpx solid #ccc;
  color: #ccc;
}
.post_main .post_img_wrap .up_img_item {
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.category_wrap {
  margin-top: 10rpx;
}
.category_wrap .cates {
  padding-bottom: 0;
  background-color: #fff;
}
.category_wrap .cates .cates_title {
  padding: 10rpx;
  font-size: 32rpx;
  border-bottom: 1rpx solid #ccc;
}
.category_wrap .cates .cates_content {
  display: flex;
}
.category_wrap .cates .cates_content view {
  background-color: #fff;
  padding: 0 30rpx;
  margin: 10rpx;
  border-radius: 10rpx;
  border: 1rpx solid var(--themeColor);
}
.category_wrap .cates .cates_content .active {
  background-color: var(--themeColor);
  color: #fff;
}
.category_wrap .keywords {
  margin-top: 10rpx;
  padding-bottom: 0;
  background-color: #fff;
}
.category_wrap .keywords .keywords_title {
  padding: 10rpx;
  font-size: 32rpx;
  border-bottom: 1rpx solid #ccc;
}
.category_wrap .keywords .keywords_title .keywords_tip {
  font-size: 28rpx;
  color: var(--themeColor);
}
.category_wrap .keywords .keywords_content {
  display: flex;
  flex-wrap: wrap;
}
.category_wrap .keywords .keywords_content view {
  display: flex;
  background-color: #fff;
  padding: 0 10rpx;
  margin: 10rpx;
  border-radius: 10rpx;
  border: 1rpx solid var(--themeColor);
}
.category_wrap .keywords .keywords_content view .DIY_wrap {
  padding: 0;
  margin: 0;
  border: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.category_wrap .keywords .keywords_content view .DIY_wrap .icon-gou1 {
  color: green;
}
.category_wrap .keywords .keywords_content .active {
  background-color: var(--themeColor);
  color: #fff;
}
.submit_wrap {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}
.submit_wrap .post_time_wrap {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  font-size: 40rpx;
  color: #999;
}
.submit_wrap .active {
  color: var(--themeColor);
}
.submit_wrap .submit_btn {
  padding: 20rpx 200rpx;
  margin: 30rpx;
  font-size: 40rpx;
  font-weight: 700;
  color: #fff;
  background-color: var(--themeColor);
  border-radius: 40rpx;
}
